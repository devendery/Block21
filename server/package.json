{
  "name": "block21-server",
  "version": "1.0.0",
  "description": "Colyseus Multiplayer Server for Block21 - Unlimited Scale Edition",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:watch": "nodemon --watch src --exec ts-node src/index.ts",
    "test": "node benchmark.js",
    "test:performance": "node --expose-gc benchmark.js",
    "test:memory": "node --inspect benchmark.js",
    "test:stress": "node benchmark.js --stress",
    "lint": "eslint src/**/*.ts",
    "profile": "node --prof dist/index.js",
    "profile:analyze": "node --prof-process isolate*.log > profile.txt",
    "clean": "rm -rf dist node_modules package-lock.json",
    "setup": "npm install && npm run build",
    "monitor": "node --trace-gc dist/index.js"
  },
  "keywords": [
    "colyseus",
    "multiplayer",
    "game",
    "scalable",
    "unlimited",
    "worms-zone"
  ],
  "author": "Obsidian Sovereign",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@colyseus/schema": "3.0.76",
    "colyseus": "0.16.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "config": {
    "port": 2567,
    "maxPlayers": 1000,
    "tickRate": 60,
    "region": "local",
    "enableProfiling": false,
    "enableGarbageCollection": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/block21-unlimited.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/block21-unlimited/issues"
  },
  "homepage": "https://github.com/yourusername/block21-unlimited#readme"
}